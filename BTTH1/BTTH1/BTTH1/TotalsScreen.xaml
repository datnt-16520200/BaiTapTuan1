<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BTTH1.TotalsScreen">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="Start" VerticalOptions="Start">
            <Label Text="Màn hình tính tổng!" FontSize="20" />

            <Label Text="Nhập số A" FontSize="18" />
            <Entry Placeholder="Nhập số A" x:Name="txtNumberA" FontSize="20"
                   Keyboard="Numeric" />

            <Label Text="Nhập số B" FontSize="18" />
            <Entry Placeholder="Nhập số B" x:Name="txtNumberB" FontSize="20"
                   Keyboard="Numeric"/>

            <Label Text="Tổng" FontSize="18" />
            <Entry x:Name="txtTotal" FontSize="20" IsEnabled="False" />

            <Button Text="Tính tổng" Clicked="calculateTotal" VerticalOptions="Center"/>
            <Button Text="Về trang chủ" Clicked="backToMainPage" VerticalOptions="End"
                    HorizontalOptions="End"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>